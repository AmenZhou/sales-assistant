.jumbotron
  .container
    .col-md-offset-2
      %h2.col-md-offset-4 Log in
      = simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal"}) do |f|
        .form-group
          %label.control-label.col-md-2 Email:
          .col-md-7
            = f.input_field :email, required: false, autofocus: true, class: "form-control"
        .form-group
          %label.control-label.col-md-2 Password:
          .col-md-7
            = f.input_field :password, required: false, class: "form-control"
        .form-group
          .col-md-4
            = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
        .form-group
          .col-md-offset-2
            = f.button :submit, "Log in", class: "btn btn-primary"
      = render "devise/shared/links"
