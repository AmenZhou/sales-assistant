= render 'post_modal'
.row
  .col-md-6
    %h3= @category.name
  .col-md-6
    = link_to 'New Post', new_category_post_path, remote: true, method: :get, class: "btn btn-primary align-right", data: { toggle: "modal", target: "#postModal", whatever: "@mdo" }

-@posts.each do |post|
  .row
    .panel.panel-default
      .panel-heading
        %h3.panel-title
          = post.title
          - if post.user == current_user
            = link_to 'Edit', edit_category_post_path(id: post.id), remote: true, data: { toggle: "modal", target: "#postModal" }, class: 'align-right'
            = link_to 'Delete', category_post_path(id: post.id), method: :delete, date: { confirm: 'Are you sure?' }, class: 'align-right'
      .panel-body
        = post.content
        = render partial: 'upload_files', locals: { upload_files: post.upload_files }
      .panel-footer
        = post.media_type


