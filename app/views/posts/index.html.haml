= render 'post_modal'
.row
  .col-md-6
    %h3= @category.name
  .col-md-6
    = link_to 'New Post', new_category_post_path, remote: true, method: :get, class: "btn btn-primary align-right", data: { toggle: "modal", target: "#postModal", whatever: "@mdo" }

-@posts.each do |post|
  .row
    .panel.panel-default
      .panel-heading
        %h3.panel-title
          = post.title
          - if post.user == current_user
            .align-right
              = link_to 'Edit', edit_category_post_path(id: post.id), remote: true, data: { toggle: "modal", target: "#postModal" }
              = link_to 'Delete', category_post_path(id: post.id), method: :delete, data: { confirm: 'Are you sure?' }
      .panel-body
        = post.content
        = render partial: 'upload_files', locals: { upload_files: post.upload_files }
      .panel-footer
        %span Media Type:
        = link_to post.media_type, '#'
        .align-right
          %span Tags:
          = raw post.tag_list.map{|t| link_to t, '#'}.join(', ')


