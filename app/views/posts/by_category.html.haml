%h1 Category Search Page
.row
  .col-md-6
    = render 'search_links_head'
.row
  %ol.breadcrumb
    Categories
    - Category.pluck(:name).each do |c|
      %li
        = link_to c, polymorphic_path([:by_category, controller.controller_name], category: c)

#posts_list
  = render partial: 'posts_list', :posts => @posts
= will_paginate @posts
