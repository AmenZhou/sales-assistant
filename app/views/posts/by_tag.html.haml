%h1 Tag Search Page
.row
  .col-md-6
    = render 'search_links_head'
.row
  %ol{id: "tag_cloud", class: 'breadcrumb'}
    Tags
    - tag_cloud Post.tag_counts, %w{s m l} do |tag, css_class|
      %li
        = link_to tag.name, by_tag_posts_path(tag.name), class: css_class

= render partial: 'post', collection: @posts
