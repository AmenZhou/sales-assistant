.post-panel-group.col-md-4
  .panel.panel-default
    .panel-heading
      %h3.panel-title
        = post.title
        - if post.user == current_user
          .align-right
            = link_to 'Edit', edit_post_path(post)
            = link_to 'Delete', post_path(post), method: :delete, data: { confirm: 'Are you sure?' }
        %div.panel-head-line
          Category:
          = post.category.try(:name)
        %div.panel-head-line
          Author:
          = link_to post.user.try(:email), by_username_posts_path(username: post.user.try(:email))
        %div.panel-head-line
          Updated Time
          = post.updated_at
    .panel-body
      = post.content
      = render partial: 'upload_files', locals: { upload_files: post.upload_files }
    .panel-footer
      %span Media Type:
      = link_to post.media_type, by_media_type_posts_path(media_type: post.media_type)
      .align-right
        %span Tags:
        = raw post.tag_list.map{|t| link_to t, by_tag_posts_path(tag: t)}.join(', ')


