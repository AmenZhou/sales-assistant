%h1 Username Search Page
.row
  .col-md-6
    = render 'search_links_head'
.row
  %ol.breadcrumb
    Usernames
    - User.pluck(:email).each do |email|
      %li
        = link_to email, polymorphic_path([:by_username, controller.controller_name], username: email)

#posts_list
  = render partial: 'post', collection: @posts
= will_paginate @posts
