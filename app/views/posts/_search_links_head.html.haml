.row.normal-row
  = link_to t("board.category_search"), polymorphic_path([:by_category, controller.controller_name], category: 'all'), class: 'btn btn-warning'
  = link_to t("board.tags_search"), polymorphic_path([:by_tag, controller.controller_name], tag: 'all'), class: 'btn btn-warning'
  = link_to t("board.user_search"), polymorphic_path([:by_username, controller.controller_name], username: 'all'), class: 'btn btn-warning'
  - if is_current_controller_sales_tool?
    = link_to t("board.media_type_search"), polymorphic_path([:by_media_type, controller.controller_name], media_type: 'all'), class: 'btn btn-warning'
  = link_to t("board.complex_search"), polymorphic_path([:by_complex_search, controller.controller_name]), class: 'btn btn-warning'
