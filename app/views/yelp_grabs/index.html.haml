= link_to "Export Csv", export_data_yelp_grabs_path, class: "btn btn-primary"

= simple_form_for @yelpdata_search, url: search_yelp_grabs_path, method: :get, html: {class: 'form-inline'} do |f|
  .row.inline-row
    = f.input_field :name, placeholder: t('yelp.name'), class: 'form-control'
    = f.input_field :genre, placeholder: t('yelp.select_genre'), class: 'form-control'
  .row.inline-row
    = f.input_field :address, placeholder: t('yelp.address'), class: 'form-control'
    = f.input_field :borough, collection: YelpGrab.boroughs, prompt: t('yelp.select_borough'), class: 'form-control'
    = f.input_field :zipcode, collection: YelpGrab.zipcodes, prompt: t('yelp.select_zipcode'), class: 'form-control'
    = f.input_field :city, placeholder: t('yelp.select_city'), class: 'form-control'
    = f.submit t('yelp.search'), class: 'btn btn-primary'
    = link_to t('yelp.clear'), yelp_grabs_path, class: 'btn btn-default'


%table.table.table-hover
  %thead
    %tr
      %th= t 'yelp.name'
      %th= t 'yelp.genre'
      %th= t 'yelp.rating'
      %th= t 'yelp.phone_number'
      %th= t 'yelp.address'
      %th= t 'yelp.date'
      %th= t 'yelp.city'
      %th= t 'yelp.borough'
      %th= t 'yelp.zipcode'
      %th= t 'yelp.edit'
  - @yelps.each_with_index do |y, i|
    %tbody
      %tr
        %td= link_to "#{y.name}", "https://www.yelp.com" + y.url, target: "_blank"
        %td{title: y.genre}= truncate(y.genre, length: 10)
        %td= y.rating
        %td= y.phone_num
        %td{title: y.address}= truncate(y.address, length: 10)
        %td= y.updated_at.strftime('%b/%d/%Y')
        %td{title: y.city}= truncate(y.city, length: 10)
        %td= y.borough
        %td= y.zipcode
        %td= link_to t('yelp.edit'), edit_yelp_grab_path(y), class: 'btn btn-warning btn-xs'
= will_paginate @yelps